/* ROUNDED THEME FOR ROFI */
/* Author: Newman Sanchez (https://github.com/newmanls) */

* {
    font:   "CodeNewRoman Nerd Font Propo 13";

    background-color:   transparent;
    text-color:         @primary;

    margin:     0px;
    padding:    0px;
    spacing:    0px;
}

window {
    location:       center;
    width:          480;
    background-color:   @background;
    border: 2;
    border-radius:  9px;
    border-color: @border;
}

mainbox {
    padding:    24px;
}

inputbar {
    font:   "CodeNewRoman Nerd Font Propo 20";
    background-color:   @accent;
    border-color:       @primary;

    border:         2px;
    border-radius:  9px;

    padding:    12px 18px;
    spacing:    8px;
    children:   [ entry ];
}

entry {
    font: inherit;
}

message {
    margin:             12px 0 0;
    border-radius:      9px;
    border-color:       @border;
    background-color:   @border;
}

textbox {
    padding:    8px 24px;
}

listview {
    background-color:   transparent;

    margin:     18px 0 0;
    lines:      8;
    columns:    1;

    fixed-height: true;
}

element {
    padding:        12px 16px;
    spacing:        12px;
    border-radius:  9px;
}

element normal active {
    text-color: @primary;
}

element alternate active {
    text-color: @primary;
}

element selected normal, element selected active {
    background-color:   @primary;
    text-color: @background;
}

element-icon {
    size:           1.5em;
}

element-text {
    text-color: inherit;
}

entry, element-icon, element-text {
    vertical-align: 0.5;
}
